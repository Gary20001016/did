body {
  margin: 0;
  padding: 0;
  background-color: #0f172a;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
    "Helvetica Neue", Arial, "Noto Sans", sans-serif;
  color: #ffffff;
}

.app-shell {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-color: #0f172a;
  color: #ffffff;
  position: relative;
  display: flex;
  flex-direction: column;
}

.page {
  width: 100%;
  height: 100%;
  padding: 0;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

/* Custom scrollbar */
.page::-webkit-scrollbar {
  width: 6px;
}
.page::-webkit-scrollbar-track {
  background: #1e293b;
}
.page::-webkit-scrollbar-thumb {
  background: #334155;
  border-radius: 3px;
}

/* Theme colors */
.bg-theme {
  background-color: #cda164;
}
.text-theme {
  color: #cda164;
}
.border-theme {
  border-color: #cda164;
}
.hover\:bg-theme-dark:hover {
  background-color: #b88e53;
}
.hover\:text-theme-light:hover {
  color: #e0b87e;
}

/* Header */
.app-header {
  padding: 24px 32px;
  background-color: #1e293b;
  border-bottom: 1px solid #334155;
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Landing page specific */
.landing-page {
  background-image: url('https://images.unsplash.com/photo-1516738901171-8eb4fc296664?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1440&q=80&blend=000000&blend-alpha=50&blend-mode=multiply');
  background-size: cover;
  background-position: center;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 32px;
}

/* Content area for pages with header */
.page-content {
  flex: 1;
  padding: 32px;
  overflow-y: auto;
}

/* Content area spacing */
.content-section {
  margin-bottom: 32px;
}

.content-section:last-child {
  margin-bottom: 0;
}

