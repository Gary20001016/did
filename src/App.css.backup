/* Button styles */
button {
  cursor: pointer;
  border: none;
  transition: all 0.15s ease;
}

button:focus {
  outline: 2px solid #cda164;
  outline-offset: 2px;
}

/* Secondary button style for white buttons */
.btn-secondary {
  background-color: #334155;
  color: #ffffff;
  border: 1px solid #475569;
}

.btn-secondary:hover {
  background-color: #475569;
  border-color: #64748b;
}

/* Input styles */
input {
  transition: all 0.15s ease;
}

input:focus {
  outline: none;
  border-color: #cda164;
  box-shadow: 0 0 0 1px #cda164;
}

/* Icon styles */
.icon {
  width: 1.25rem;
  height: 1.25rem;
}

.icon-sm {
  width: 1rem;
  height: 1rem;
}

.icon-lg {
  width: 1.5rem;
  height: 1.5rem;
}

/* Copy button and interactive elements */
.copy-btn {
  color: #94a3b8;
  transition: color 0.15s ease;
}

.copy-btn:hover {
  color: #cda164;
}

/* Manage button styling */
.manage-btn {
  color: #cda164;
  transition: color 0.15s ease;
}

.manage-btn:hover {
  color: #e0b87e;
}

